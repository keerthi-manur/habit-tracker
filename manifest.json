{
  "manifest_version": 3,
  "name": "Micro Habit Tracker",
  "version": "1.0",
  "description": "Track daily habits",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Micro Habit Tracker"
  },
  "background": {
    "service_worker": "background.js"
  }
}